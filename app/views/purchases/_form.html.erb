
<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ownership, :collection => ["Rent","Buy"], prompt: 'Select a purchase type' %>
    <%= f.association :customer, :collection =>  @customers, :label_method => :last_name, :value_method => :id, prompt: 'Select a customer' %>
    <%= f.hidden_field :movie_id, :value => @movie.id %>
      <%= @movie.Title %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
