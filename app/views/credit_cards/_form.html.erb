
<%= simple_form_for(@credit_card) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.label :exp_date %><br>
    <%= select_date Date.today, prefix: :exp_date %> "Pick any day of the month" 
    <%= f.input :name_on_card %>
    <%= f.input :organisation, collection: CreditCard.organisations.keys, prompt: 'Select a card type', required: true %>
    <%= f.association :customer, :collection =>  @customers, :label_method => :last_name, :value_method => :id, prompt: 'Select a customer as owner' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
