<p id="notice"><%= notice %></p>

<h1>Credit Cards</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Exp date</th>
      <th>Name on card</th>
      <th>Organisation</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.number %></td>
        <td><%= credit_card.exp_date %></td>
        <td><%= credit_card.name_on_card %></td>
        <td><%= credit_card.organisation %></td>
        <td><%= credit_card.customer_id %></td>
        <td><%= link_to 'Show', credit_card %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit Card', new_credit_card_path(:customer_id => @customer) %> |
<%= link_to 'Back', user_path(:id => @customer.user.id) %>
