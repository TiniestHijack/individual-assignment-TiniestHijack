<p id="notice"><%= notice %></p>

<div class='container'>
  <h3 style="text-align:center;"><%= @movie.Title %></h3>
  <p style="text-align:center;"><%= @plot %></p> 
  <img src=<%= @image %> class="rounded mx-auto d-block" style="width:15%;height:15%;"> 
</div>

<br>

<div class="container">
<ul class="list-inline" style="text-align:center;">
  <li class="list-inline-item"><strong>Title:</strong>
  <%= @movie.Title %></li>
  <li class="list-inline-item"><strong>Year:</strong>
  <%= @movie.Year %></li>
  <li class="list-inline-item"><strong>Year:</strong>
  <%= @movie.Year %></li>
  <li class="list-inline-item"><strong>Duration:</strong>
  <%= @movie.Duration %></li>
  <li class="list-inline-item"><strong>Rating:</strong>
  <%= @movie.Rating %></li>
  <li class="list-inline-item"><strong>Content:</strong>
  <%= @movie.Content %></li>
  <li class="list-inline-item"><strong>Numreviews:</strong>
  <%= @movie.NumReviews %></li>
  <li class="list-inline-item"><strong>Country:</strong>
  <%= @movie.Country %></li>
  <li class="list-inline-item"><strong>Gross:</strong>
  <%= @movie.Gross %></li>
  <li class="list-inline-item"><strong>Budget:</strong>
  <%= @movie.Budget %></li>
  <li class="list-inline-item"><strong>Actor1:</strong>
  <%= @movie.Actor1 %></li>
  <li class="list-inline-item"><strong>Actor2:</strong>
  <%= @movie.Actor2 %></li>
  <li class="list-inline-item"><strong>Actor3:</strong>
  <%= @movie.Actor3 %></li>
  <li class="list-inline-item"><strong>Genres:</strong>
  <%= @movie.Genres %></li>
  <li class="list-inline-item"><strong>Keywords:</strong>
  <%= @movie.Keywords %></li>
</ul>
</div>

<br>

<div class="container">
<h2>Purchases</h2>
<table class="table table-sm">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Date and Time of Purchase</th>
    </tr>
  </thead>

  <tbody>
    <% @movie.purchases.each do |pur|
      @customer = Customer.find(pur.customer_id) %>
      <tr>
        <td><%=@customer.first_name %></td> 
        <td><%=@customer.last_name %></td>
        <td><%=pur.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Rent or Buy', new_purchase_path(:movie_id => @movie) %> |
<%= link_to 'Back', movies_path %>
</div>

