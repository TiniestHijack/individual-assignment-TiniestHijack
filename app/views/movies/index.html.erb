<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Duration</th>
      <th>Rating</th>
      <th>Content</th>
      <th>Numreviews</th>
      <th>Country</th>
      <th>Gross</th>
      <th>Budget</th>
      <th>Actor1</th>
      <th>Actor2</th>
      <th>Actor3</th>
      <th>Genres</th>
      <th>Keywords</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.Title %></td>
        <td><%= movie.Year %></td>
        <td><%= movie.Director %></td>
        <td><%= movie.Duration %></td>
        <td><%= movie.Rating %></td>
        <td><%= movie.Content %></td>
        <td><%= movie.NumReviews %></td>
        <td><%= movie.Country %></td>
        <td><%= movie.Gross %></td>
        <td><%= movie.Budget %></td>
        <td><%= movie.Actor1 %></td>
        <td><%= movie.Actor2 %></td>
        <td><%= movie.Actor3 %></td>
        <td><%= movie.Genres %></td>
        <td><%= movie.Keywords %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

